{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "MongoDbSettings": {
    "ConnectionString": "mongodb://root:pass@127.0.0.1:27017/?authSource=admin",
    "DatabaseName": "TTPlayers"
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ]
  },
  "SndttaSettings": {
    "PlayerListUrl": "http://www.sndtta.org.au/website/player_list.asp",
    "RcPlayerUrl": "http://www.ratingscentral.com/Player.php?PlayerID=",
    "RcPlayerHistoryUrl": "https://www.ratingscentral.com/PlayerHistory.php?PlayerID=",
    "RcEventUrl": "https://www.ratingscentral.com/EventDetail.php?EventID="
  }
}